{
  "name": "ideoxan",
  "version": "0.1.0",
  "description": "Ideoxan is a free to use online tool to learn programming.",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon --ext js index.js",
    "start": "node index.js",
    "test": "jest --testTimeout=10000 --detectOpenHandles --forceExit",
    "server": "pm2 start ./launcher.sh --name ideoxan --restart-delay 5000 --max-memory-restart 500M --watch --cron \"0 2 * * *\"",
    "prestart": "git submodule update --remote --init --recursive",
    "snyk-protect": "snyk protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideoxan/ideoxan.git"
  },
  "author": "Skyclo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ideoxan/ideoxan/issues"
  },
  "homepage": "https://github.com/ideoxan/ideoxan#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "csso": "^4.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.7.0",
    "helmet": "^4.2.0",
    "i18n": "^0.13.2",
    "mongoose": "^5.11.4",
    "morgan": "^1.10.0",
    "os": "^0.1.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pdfkit": "^0.11.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "nodemon": "^2.0.3",
    "pm2": "^4.5.0",
    "snyk": "^1.434.2",
    "supertest": "^6.0.1"
  },
  "engines": {
    "node": ">=12"
  },
  "snyk": true,
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
