{
  "name": "ideoxan",
  "version": "0.1.0",
  "description": "Ideoxan is a free to use online tool to learn programming.",
  "main": "server.js",
  "scripts": {
    "devrun": "nodemon index.js",
    "start": "node index.js",
    "test": "cross-env NODE_ENV=test EXPRESS_SESSION_SECRET=abc123 PWD_HASH=8 GITHUB_WEBHOOK_SIG=null jest --testTimeout=10000 --runInBand --no-cache --detectOpenHandles --forceExit",
    "server": "pm2 start ./launcher.sh --name ideoxan --restart-delay 5000 --max-memory-restart 500M --watch --cron \"0 2 * * *\"",
    "prestart": "git submodule update --remote --init --recursive",
    "css-optimize": "node css_optimizer.js",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ideoxan/ideoxan.git"
  },
  "author": "Skyclo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ideoxan/ideoxan/issues"
  },
  "homepage": "https://github.com/ideoxan/ideoxan#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "csso": "^4.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "express-flash": "0.0.2",
    "express-session": "^1.17.1",
    "express-validator": "^6.6.1",
    "helmet": "^4.0.0",
    "mongoose": "^5.9.27",
    "morgan": "^1.10.0",
    "os": "^0.1.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "jest": "^26.3.0",
    "nodemon": "^2.0.3",
    "pm2": "^4.4.0",
    "snyk": "^1.372.0",
    "supertest": "^4.0.2"
  },
  "snyk": true,
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
